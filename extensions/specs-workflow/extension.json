{
  "name": "specs-workflow",
  "version": "1.2.0",
  "description": "Управление спецификациями: 3-фазный workflow, валидация, dev-plan формат, автоматическая проверка покрытия, MCP инструменты для research",
  "platforms": ["cursor", "claude"],
  "category": "workflow",
  "files": {
    "cursor": ["cursor/commands/create-spec.md"],
    "claude": ["claude/commands/create-spec.md"]
  },
  "rules": {
    "cursor": [
      "cursor/rules/specs-management.mdc",
      "cursor/rules/no-mocks-fallbacks.mdc",
      "cursor/rules/dev-plan.mdc",
      "cursor/rules/research-workflow.mdc",
      "cursor/rules/specs-validation.mdc"
    ],
    "claude": [
      "claude/rules/specs-management.md",
      "claude/rules/no-mocks-fallbacks.md",
      "claude/rules/dev-plan.md",
      "claude/rules/research-workflow.md",
      "claude/rules/specs-validation.md"
    ]
  },
  "tools": {
    "specs-generator": "tools/specs-generator",
    "specs-validator": "tools/specs-validator",
    "steps-validator": "tools/steps-validator",
    "mcp-setup": "tools/mcp-setup"
  },
  "hooks": {
    "cursor": {},
    "claude": {}
  },
  "postInstall": {
    "cursor": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform cursor",
      "interactive": true,
      "skipInCI": true
    },
    "claude": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform claude",
      "interactive": true,
      "skipInCI": true
    }
  },
  "_hooksNote": "Hooks are installed by memory.ts (hardcoded) - specs-validator and steps-validator"
}
