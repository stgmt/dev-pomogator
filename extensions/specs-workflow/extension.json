{
  "name": "specs-workflow",
  "version": "1.1.0",
  "description": "Управление спецификациями: 3-фазный workflow, валидация, dev-plan формат, автоматическая проверка покрытия",
  "platforms": ["cursor", "claude"],
  "category": "workflow",
  "files": {
    "cursor": ["cursor/commands/create-spec.md"],
    "claude": ["claude/commands/create-spec.md"]
  },
  "rules": {
    "cursor": [
      "cursor/rules/specs-management.mdc",
      "cursor/rules/dev-plan.mdc",
      "cursor/rules/research-workflow.mdc",
      "cursor/rules/specs-validation.mdc"
    ],
    "claude": [
      "claude/rules/specs-management.md",
      "claude/rules/dev-plan.md",
      "claude/rules/research-workflow.md",
      "claude/rules/specs-validation.md"
    ]
  },
  "tools": {
    "specs-generator": "tools/specs-generator",
    "specs-validator": "tools/specs-validator",
    "steps-validator": "tools/steps-validator"
  },
  "hooks": {
    "cursor": {
      "beforeSubmitPrompt": "npx tsx ~/.dev-pomogator/scripts/validate-specs.ts",
      "Stop": "npx tsx ~/.dev-pomogator/scripts/validate-steps.ts"
    },
    "claude": {
      "UserPromptSubmit": "npx tsx ~/.dev-pomogator/scripts/validate-specs.ts",
      "Stop": "npx tsx ~/.dev-pomogator/scripts/validate-steps.ts"
    }
  }
}
