{
  "name": "specs-workflow",
  "version": "1.2.0",
  "description": "Управление спецификациями: 3-фазный workflow, валидация, автоматическая проверка покрытия, MCP инструменты для research",
  "platforms": ["cursor", "claude"],
  "category": "workflow",
  "files": {
    "cursor": ["cursor/commands/create-spec.md"],
    "claude": ["claude/commands/create-spec.md"]
  },
  "rules": {
    "cursor": [
      "cursor/rules/specs-management.mdc",
      "cursor/rules/no-mocks-fallbacks.mdc",
      "cursor/rules/research-workflow.mdc",
      "cursor/rules/specs-validation.mdc"
    ],
    "claude": [
      "claude/rules/specs-management.md",
      "claude/rules/no-mocks-fallbacks.md",
      "claude/rules/research-workflow.md",
      "claude/rules/specs-validation.md"
    ]
  },
  "tools": {
    "specs-generator": "tools/specs-generator",
    "specs-validator": "tools/specs-validator",
    "steps-validator": "tools/steps-validator",
    "mcp-setup": "tools/mcp-setup"
  },
  "toolFiles": {
    "specs-generator": [
      "tools/specs-generator/README.md",
      "tools/specs-generator/fill-template.ps1",
      "tools/specs-generator/list-specs.ps1",
      "tools/specs-generator/scaffold-spec.ps1",
      "tools/specs-generator/spec-status.ps1",
      "tools/specs-generator/validate-spec.ps1",
      "tools/specs-generator/templates/ACCEPTANCE_CRITERIA.md.template",
      "tools/specs-generator/templates/DESIGN.md.template",
      "tools/specs-generator/templates/feature.template",
      "tools/specs-generator/templates/FILE_CHANGES.md.template",
      "tools/specs-generator/templates/FR.md.template",
      "tools/specs-generator/templates/NFR.md.template",
      "tools/specs-generator/templates/README.md.template",
      "tools/specs-generator/templates/REQUIREMENTS.md.template",
      "tools/specs-generator/templates/RESEARCH.md.template",
      "tools/specs-generator/templates/SCHEMA.md.template",
      "tools/specs-generator/templates/TASKS.md.template",
      "tools/specs-generator/templates/USE_CASES.md.template",
      "tools/specs-generator/templates/USER_STORIES.md.template"
    ],
    "specs-validator": [
      "tools/specs-validator/completeness.ts",
      "tools/specs-validator/matcher.ts",
      "tools/specs-validator/reporter.ts",
      "tools/specs-validator/validate-specs.ts",
      "tools/specs-validator/parsers/feature-parser.ts",
      "tools/specs-validator/parsers/md-parser.ts"
    ],
    "steps-validator": [
      "tools/steps-validator/analyzer.ts",
      "tools/steps-validator/config.ts",
      "tools/steps-validator/detector.ts",
      "tools/steps-validator/logger.ts",
      "tools/steps-validator/reporter.ts",
      "tools/steps-validator/types.ts",
      "tools/steps-validator/validate-steps.ts",
      "tools/steps-validator/docs/CSHARP_PATTERNS.md",
      "tools/steps-validator/docs/SKIP_SCENARIO_ANALYSIS.md",
      "tools/steps-validator/parsers/csharp-parser.ts",
      "tools/steps-validator/parsers/index.ts",
      "tools/steps-validator/parsers/python-parser.ts",
      "tools/steps-validator/parsers/typescript-parser.ts"
    ],
    "mcp-setup": [
      "tools/mcp-setup/mcp-config.json",
      "tools/mcp-setup/README.md",
      "tools/mcp-setup/setup-mcp.py"
    ]
  },
  "hooks": {
    "cursor": {},
    "claude": {}
  },
  "postInstall": {
    "cursor": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform cursor",
      "interactive": true,
      "skipInCI": true
    },
    "claude": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform claude",
      "interactive": true,
      "skipInCI": true
    }
  },
  "postUpdate": {
    "cursor": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform cursor",
      "interactive": true,
      "skipInCI": true
    },
    "claude": {
      "command": "python tools/mcp-setup/setup-mcp.py --platform claude",
      "interactive": true,
      "skipInCI": true
    }
  },
  "_hooksNote": "Hooks are installed by memory.ts (hardcoded) - specs-validator and steps-validator"
}
