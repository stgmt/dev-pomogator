{
  "name": "auto-commit",
  "version": "2.1.0",
  "description": "Automatic git commits with LLM-generated messages on agent stop",
  "platforms": ["cursor", "claude"],
  "category": "automation",
  "files": {
    "cursor": [],
    "claude": []
  },
  "tools": {
    "auto-commit": "tools/auto-commit"
  },
  "toolFiles": {
    "auto-commit": [
      "tools/auto-commit/auto_commit_core.ts",
      "tools/auto-commit/auto_commit_llm.ts",
      "tools/auto-commit/auto_commit_prompt_guide.md",
      "tools/auto-commit/auto_commit_stop.ts",
      "tools/auto-commit/auto_commit_transcript.ts"
    ]
  },
  "hooks": {
    "claude": {
      "Stop": "npx tsx tools/auto-commit/auto_commit_stop.ts"
    },
    "cursor": {
      "stop": "npx tsx tools/auto-commit/auto_commit_stop.ts"
    }
  }
}
