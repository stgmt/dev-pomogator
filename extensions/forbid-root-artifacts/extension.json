{
  "name": "forbid-root-artifacts",
  "version": "1.0.0",
  "description": "Pre-commit хук для контроля файлов в корне репозитория",
  "platforms": ["cursor", "claude"],
  "category": "workflow",
  "files": {
    "cursor": ["cursor/commands/configure-root-artifacts.md"],
    "claude": ["claude/commands/configure-root-artifacts.md"]
  },
  "tools": {
    "forbid-root-artifacts": "tools/forbid-root-artifacts"
  },
  "toolFiles": {
    "forbid-root-artifacts": [
      "tools/forbid-root-artifacts/.root-artifacts.yaml.template",
      "tools/forbid-root-artifacts/check.py",
      "tools/forbid-root-artifacts/configure.py",
      "tools/forbid-root-artifacts/default-whitelist.yaml",
      "tools/forbid-root-artifacts/requirements.txt",
      "tools/forbid-root-artifacts/setup.py"
    ]
  },
  "postInstall": {
