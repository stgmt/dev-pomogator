FROM node:20-slim

# Install git, python, PowerShell and other dependencies
RUN apt-get update && apt-get install -y git curl unzip python3 python3-pip python3-yaml wget apt-transport-https software-properties-common && \
    apt-get clean && rm -rf /var/lib/apt/lists/* && \
    ln -s /usr/bin/python3 /usr/bin/python

# Install PowerShell Core
RUN wget -q https://packages.microsoft.com/config/debian/12/packages-microsoft-prod.deb && \
    dpkg -i packages-microsoft-prod.deb && \
    rm packages-microsoft-prod.deb && \
    apt-get update && \
    apt-get install -y powershell && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally (as root, before user switch)
RUN npm install -g @anthropic-ai/claude-code || true

# Create test user with home directory
RUN useradd -m -s /bin/bash testuser

# Switch to testuser
USER testuser
ENV HOME=/home/testuser
ENV PATH="${HOME}/.bun/bin:${HOME}/.local/bin:${PATH}"
ENV DEV_POMOGATOR_TEST_IN_DOCKER=1

# Install bun for testuser
RUN curl -fsSL https://bun.sh/install | bash

# Install Cursor Agent CLI (cursor-agent binary from cursor.com/install)
RUN curl -fsSL https://cursor.com/install | bash && \
    cursor-agent --version

# Pre-cache claude-mem clone and build (avoid re-clone during tests).
# Non-fatal: if clone fails, tests will clone at runtime (slower but works).
RUN (for i in 1 2 3; do \
      git clone https://github.com/thedotmack/claude-mem.git \
        /home/testuser/.claude/plugins/marketplaces/thedotmack && break; \
      echo "Clone attempt $i failed, retrying in ${i}0s..."; \
      rm -rf /home/testuser/.claude/plugins/marketplaces/thedotmack; \
      sleep $((i * 10)); \
    done && \
    cd /home/testuser/.claude/plugins/marketplaces/thedotmack && \
    bun install && \
    bun run build) || echo "WARNING: claude-mem pre-cache failed, will clone at runtime"

WORKDIR /home/testuser/app

# Copy all source code (may include Windows node_modules)
COPY --chown=testuser:testuser . .

# Remove Windows node_modules to avoid platform mismatches (esbuild etc.)
RUN rm -rf node_modules

# Install dependencies for Linux (skip prepare script)
RUN npm install --ignore-scripts

# Build
RUN npm run build

ENV HOME=/home/testuser

CMD ["npm", "run", "test:e2e:docker"]
