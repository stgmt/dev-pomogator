FROM node:20-slim

# Install git, python, PowerShell and other dependencies
RUN apt-get update && apt-get install -y git curl unzip python3 python3-pip python3-yaml wget apt-transport-https software-properties-common && \
    apt-get clean && rm -rf /var/lib/apt/lists/* && \
    ln -s /usr/bin/python3 /usr/bin/python

# Install PowerShell Core
RUN wget -q https://packages.microsoft.com/config/debian/12/packages-microsoft-prod.deb && \
    dpkg -i packages-microsoft-prod.deb && \
    rm packages-microsoft-prod.deb && \
    apt-get update && \
    apt-get install -y powershell && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally (as root, before user switch)
RUN npm install -g @anthropic-ai/claude-code || true

# Create test user with home directory
RUN useradd -m -s /bin/bash testuser

# Switch to testuser
USER testuser
ENV HOME=/home/testuser
ENV PATH="${HOME}/.bun/bin:${HOME}/.local/bin:${PATH}"
ENV DEV_POMOGATOR_TEST_IN_DOCKER=1

# Install bun for testuser
RUN curl -fsSL https://bun.sh/install | bash

# Install Cursor Agent CLI (cursor-agent binary from cursor.com/install)
RUN curl -fsSL https://cursor.com/install | bash && \
    cursor-agent --version

WORKDIR /home/testuser/app

# Copy all source code
COPY --chown=testuser:testuser . .

# Install dependencies (skip prepare script)
RUN npm install --ignore-scripts

# Build
RUN npm run build

ENV HOME=/home/testuser

CMD ["npm", "run", "test:e2e:docker"]
